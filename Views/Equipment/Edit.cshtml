@model Equipment
@{
    string title = ViewBag.Action + " Equipment";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="IconURL">Icon URL</label>
        <input asp-for="IconURL" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="subcategory">Subcategory</label>
        <select asp-for="subcategory.SubcategoryId" class="form-control">
            <option value="">select a subcategory</option>
            @foreach (Subcategory s in ViewBag.Subcategories)
            {
                <option value="@s.SubcategoryName">@s.SubcategoryName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="weaponArt">Weapon Art</label>
        <select asp-for="weaponArt.WeaponArtId" class="form-control">
            <option value="">select a weapon art</option>
            @foreach (WeaponArt w in ViewBag.WeaponArts)
            {
                <option value="@w.Name">@w.Name</option>
            }
        </select>
    </div>
